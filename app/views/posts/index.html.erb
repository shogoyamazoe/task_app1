<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
  <p class ="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>スケジュール作成日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.startdate %></td>
        <td><%= post.enddate %></td>
        <td><% post.check %>
          <% if post.check  %>
              ○
            <% else post.check ==  false %>
          <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "確認", post %></td>
        <td><%= link_to "更新", [:edit,post] %></td>
        <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
  </tbody>
  <% end %>
</table>

<p><%= link_to "新規スケジュール作成", :new_post %></p>

