<h3>スケジュール確認</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.startdate %></td>
  </tr>
  <tr>
    <th>終了日時</th>
    <td><%= @post.enddate %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @post.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><% @post.check %>
     <% if @post.check  %>
     ○
     <% else @post.check ==  false %>
     <% end %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts %><li>
    <li><%= link_to "スケジュール編集", edit_post_path %><li>
    <li><%= link_to "スケジュールを削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" } %><li>
  </ul>
</div>